### Life-Cycle & Circularity Ontology (LCCO)
### Scope: LCA deltas for processes/materials; circularity KPIs

### Core Classes
lcco:LifeCycleStage     a owl:Class .
lcco:ImpactCategory     a owl:Class .
lcco:CircularityMetric  a owl:Class ; rdfs:subClassOf fct:Metric .
lcco:SystemBoundary     a owl:Class .
lcco:AllocationMethod   a owl:Class .

### Life Cycle Impact Metrics
lcco:GWP_kgCO2e_kg          a lcco:CircularityMetric ;
    rdfs:label "Global warming potential per kg product" ;
    rdfs:comment "Climate change impact in kg CO₂ equivalent per kg product" .

lcco:WaterUse_L_kg          a lcco:CircularityMetric ;
    rdfs:label "Water consumption per kg product" ;
    rdfs:comment "Freshwater consumption in liters per kg product" .

lcco:LandUse_m2y_kg         a lcco:CircularityMetric ;
    rdfs:label "Land use per kg product" ;
    rdfs:comment "Land occupation in m²·year per kg product" .

lcco:Energy_MJ_kg           a lcco:CircularityMetric ;
    rdfs:label "Primary energy consumption per kg product" ;
    rdfs:comment "Total primary energy in MJ per kg product" .

lcco:Acidification_kgSO2e_kg a lcco:CircularityMetric ;
    rdfs:label "Acidification potential per kg product" ;
    rdfs:comment "Acidification impact in kg SO₂ equivalent per kg product" .

lcco:Eutrophication_kgPO4e_kg a lcco:CircularityMetric ;
    rdfs:label "Eutrophication potential per kg product" ;
    rdfs:comment "Eutrophication impact in kg PO₄ equivalent per kg product" .

### Circularity Metrics
lcco:Recyclability_Index    a lcco:CircularityMetric ;
    rdfs:label "Material recyclability index" ;
    rdfs:comment "Quantitative assessment of material recyclability (0-1 scale)" .

lcco:Recycled_Content_pct   a lcco:CircularityMetric ;
    rdfs:label "Recycled content percentage" ;
    rdfs:comment "Percentage of recycled material in product" .

lcco:Biodegradability_Score a lcco:CircularityMetric ;
    rdfs:label "Biodegradability score" ;
    rdfs:comment "Rate and extent of biodegradation (0-1 scale)" .

lcco:Durability_Years       a lcco:CircularityMetric ;
    rdfs:label "Product durability in years" ;
    rdfs:comment "Expected functional lifetime of product" .

lcco:Repairability_Index    a lcco:CircularityMetric ;
    rdfs:label "Product repairability index" ;
    rdfs:comment "Ease of repair and maintenance (0-10 scale)" .

### Problems
lcco:Lower_GWP_Process a fct:Problem ;
    rdfs:label "Lower global warming potential process" ;
    rdfs:comment "Reduce climate change impact of chemical processes. Critical for meeting Paris Agreement goals and limiting global warming to 1.5°C." ;
    fct:hasCollapsePolicy [
        a fct:CollapsePolicy ;
        fct:replications 1 ;
        fct:uncertainty 0.2 ;
        lcco:gwp_reduction_threshold 0.3 ;      # ≥30% GWP reduction
        lcco:system_boundary_documented true ;
        lcco:baseline_declared true
    ] .

lcco:Water_Efficiency a fct:Problem ;
    rdfs:label "Water use efficiency improvement" ;
    rdfs:comment "Reduce freshwater consumption in manufacturing. Critical as 2B people lack access to safely managed drinking water." ;
    fct:hasCollapsePolicy [
        a fct:CollapsePolicy ;
        fct:replications 1 ;
        fct:uncertainty 0.15 ;
        lcco:water_reduction_threshold 0.4 ;    # ≥40% water reduction
        lcco:water_quality_maintained true
    ] .

lcco:Circular_Design a fct:Problem ;
    rdfs:label "Circular economy design" ;
    rdfs:comment "Design for circularity with improved recyclability, durability, and recycled content. Transition from linear take-make-waste to circular economy." ;
    fct:hasCollapsePolicy [
        a fct:CollapsePolicy ;
        fct:replications 1 ;
        fct:uncertainty 0.1 ;
        lcco:recyclability_threshold 0.7 ;      # ≥70% recyclability
        lcco:recycled_content_threshold 0.3 ;   # ≥30% recycled content
        lcco:durability_improvement true
    ] .

lcco:Land_Use_Efficiency a fct:Problem ;
    rdfs:label "Land use efficiency" ;
    rdfs:comment "Reduce land occupation and transformation impacts. Critical for biodiversity conservation and food security." ;
    fct:hasCollapsePolicy [
        a fct:CollapsePolicy ;
        fct:replications 1 ;
        fct:uncertainty 0.25 ;
        lcco:land_reduction_threshold 0.5 ;     # ≥50% land use reduction
        lcco:biodiversity_impact_assessed true
    ] .

### Properties
lcco:gwp_reduction_threshold        a owl:DatatypeProperty ; rdfs:range xsd:double .
lcco:system_boundary_documented     a owl:DatatypeProperty ; rdfs:range xsd:boolean .
lcco:baseline_declared              a owl:DatatypeProperty ; rdfs:range xsd:boolean .
lcco:water_reduction_threshold      a owl:DatatypeProperty ; rdfs:range xsd:double .
lcco:water_quality_maintained       a owl:DatatypeProperty ; rdfs:range xsd:boolean .
lcco:recyclability_threshold        a owl:DatatypeProperty ; rdfs:range xsd:double .
lcco:recycled_content_threshold     a owl:DatatypeProperty ; rdfs:range xsd:double .
lcco:durability_improvement         a owl:DatatypeProperty ; rdfs:range xsd:boolean .
lcco:land_reduction_threshold       a owl:DatatypeProperty ; rdfs:range xsd:double .
lcco:biodiversity_impact_assessed   a owl:DatatypeProperty ; rdfs:range xsd:boolean .

